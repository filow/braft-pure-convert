{
  "name": "braft-pure-convert",
  "version": "0.1.9",
  "description": "A library for braft editor to html conversion. braft编辑器转换为html文档库",
  "main": "lib/braft-pure-convert.js",
  "module": "lib/braft-pure-convert.es5.js",
  "typings": "lib/braft-pure-convert.d.ts",
  "devDependencies": {
    "@types/draft-js": "^0.10.22",
    "@types/jest": "^22.0.0",
    "@types/lodash.flattendeep": "^4.4.3",
    "@types/node": "^9.3.0",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.0",
    "jest": "^22.0.2",
    "jest-environment-jsdom": "^22.4.1",
    "jest-environment-jsdom-global": "^1.0.3",
    "lint-staged": "^7.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.55.4",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.11.1",
    "ts-jest": "^22.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.10.0",
    "typescript": "^2.6.2",
    "validate-commit-msg": "^2.12.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --no-semi --single-quote",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/filow/braft-pure-convert.git"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf lib",
    "build": "rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "publish": "npm run build && npm run test",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "push": "GITBR=$(git branch | grep \\* | cut -d ' ' -f2);git push origin ${GITBR}"
  },
  "files": [
    "lib"
  ],
  "author": "Li Renhai",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash.flattendeep": "^4.4.0"
  }
}
